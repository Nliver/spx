onStart => {
	setCostume "kai-a"
	playAndWait "recordingWhere"
	say "Where do you come from?", 2
	broadcast "1"
}

onMsg "2", => {
	playAndWait "recordingCountry"
	say "What's the climate like in your country?", 3
	broadcast "3"
}

onMsg "4", => {
	playAndWait "recordingBest"
	say "Which seasons do you like best?", 3
	broadcast "5"
}

onMsg "6", => {
	playAndWait "recordingBye2"
	say "Thanks. Bye!", 2
	setCostume Next
	broadcast "7"
}
