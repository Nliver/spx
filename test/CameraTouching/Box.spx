onKey KeyUp, => {
	turnTo 0
	step 200
	if touching(EdgeTop) {
		println "EdgeTop"
	}
}

onKey KeyDown, => {
	turnTo 180
	step 200

	if touching(EdgeBottom) {
		println "EdgeBottom"
	}
}

onKey KeyLeft, => {
	turnTo -90
	step 200

	if touching(EdgeLeft) {
		println "EdgeLeft"
	}

}

onKey KeyRight, => {
	turnTo 90
	step 200

	if touching(EdgeRight) {
		println "EdgeRight"
	}
}

onKey KeyC, => {
	turn 15
}

onKey KeyE, => {
	step 40
}

onKey KeyB, => {
	if touching(Crocodile) {
		println "Touch Crocodile"
	}
}

onClick => {
	if touching(Mouse) {
		println "touching Mouse"
	}
}

onStart => {
	for {
		if !touching(Mouse) {
			continue
		}
		if touching(Mouse) {
			println "touching Mouse"
		}
		wait 0.3
	}
}
